rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    match /membershipApplications/{applicationId} {
      allow read, list: if isAdmin();
      allow update, delete: if isAdmin();
      allow create: if request.resource.data.consentGiven == true
        && request.resource.data.email is string
        && request.resource.data.fullName is string
        && request.resource.data.retentionExpiresAt is timestamp;
    }
  }
}
